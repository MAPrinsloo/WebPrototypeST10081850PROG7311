@model WebPrototypeST10081850PROG7311.Models.ManageProductsModel

@{
    ViewBag.Title = "Manage Products";
}
<style>
    h2 {
        text-align: center;
    }
</style>
<h2>@Html.ViewBag.Title</h2>
<hr>
@using (Html.BeginForm("btnCreate_Clicked", "Farmer", FormMethod.Post))
{
    <div class="form-group">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.LabelFor(model => model.tblProduct.PRODUCT_TYPE, "PRODUCT TYPE", new { @class = "form-label text-center" })
                @Html.EditorFor(model => model.tblProduct.PRODUCT_TYPE, new { htmlAttributes = new { @class = "form-control", maxlength = 50 } })
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="row justify-content-center">
            <div class="text-center">
                <button type="submit" class="btn btn-primary w-25">Create</button>
            </div>
        </div>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <span class="closebtn">&times;</span>
        @TempData["SuccessMessage"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductList.First().P_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductList.First().PRODUCT_TYPE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductList.First().F_ID)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.ProductList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.P_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRODUCT_TYPE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.F_ID)
            </td>
        </tr>
    }
</table>

<script>
    var close = document.getElementsByClassName("closebtn");
    var i;

    for (i = 0; i < close.length; i++) {
        close[i].onclick = function () {
            var div = this.parentElement;
            div.style.opacity = "0";
            setTimeout(function () { div.style.display = "none"; }, 600);
        }
    }
</script>

