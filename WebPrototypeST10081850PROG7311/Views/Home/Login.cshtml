@model WebPrototypeST10081850PROG7311.USER
@{
    ViewBag.Title = "Login";
}

<style>
    h2 {
        text-align: center;
    }

    .center-align {
        text-align: center;
    }
</style>

<br>
<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm("btnLogin_Clicked", "Home", FormMethod.Post))
{
    <div class="form-group">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.LabelFor(model => model.USERNAME, new { @class = "form-label text-center" })
                @Html.EditorFor(model => model.USERNAME, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.LabelFor(model => model.PASSWORD.USER_PASSWORD, new { @class = "form-label text-center" })
                @Html.PasswordFor(model => model.PASSWORD.USER_PASSWORD, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="row justify-content-center">
            <div class="text-center">
                <button type="submit" class="btn btn-primary w-25">Login</button>
            </div>
        </div>
    </div>
}
