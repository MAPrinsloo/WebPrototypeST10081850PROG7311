<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <!-- -->
            @if (Session["UserLoggedIn"] == null)
            {
                @Html.ActionLink("Farm Central", "Login", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            }
            @if ((string)Session["LoggedUser_Type"] == "EMPLOYEE")
            {
                @Html.ActionLink("Farm Central", "FarmerStatistics", "Employee", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Farmer Statistics", "FarmerStatistics", "Employee", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Manage Farmers", "ManageFarmers", "Employee", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Sign Out", "SignOut", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            }
            @if ((string)Session["LoggedUser_Type"] == "FARMER")
            {
                @Html.ActionLink("Farm Central", "ManageProducts", "Farmer", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Manage Products", "ManageProducts", "Farmer", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Capture Stock", "CaptureStock", "Farmer", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Sign Out", "SignOut", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            }
            <!-- -->
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Matthew Prinsloo ST10081850</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
